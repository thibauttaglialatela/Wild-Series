{% include "base.html.twig" %}
{% block title %}
{% endblock  %}

{% block body %}

    <h1 class="text-light">{{ season.description }} de <span class="fst-italic">{{ program.title }}</span></h1>
    <h2 class="text-light">Liste des épisodes</h2>
    {% for episode in episodes %}
        <ul class="list-group">
            <li class="text-light">
                <a class="text-light"
                   href="{{ path("program_episode_show", {"programId" : program.id, "seasonId" : season.id, "episodeId" : episode.id}) }}">{{ episode.title }}</a>
            </li>
        </ul>
    {% endfor %}
    <a href="{{ path('program_show', {'slug': program.slug}) }}" class="btn btn-info">Retour à la série.</a>
    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
