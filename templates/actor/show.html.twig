{% extends "base.html.twig" %}
{% block title %}
    {{ "Acteurs"|trans }}
{% endblock  %}
{% block body %}
    <h1 class="text-light text-center">{{ actor.name }}</h1>
    <img class="align-self-start mr-3" src="{{ vich_uploader_asset(actor) }}" alt="{{ actor.name }} poster">
    <p class="text-light text-start">{{ actor.imageAuthor }}</p>

    <ul class="list-group">
        {% for program in actorPrograms %}
            <li class="list-group-item"><a
                        href="{{ path("program_show", {"slug" : program.title }) }}">{{ program }}</a></li>
        {% endfor %}
    </ul>
    <a class="btn btn-info mt-4" href="{{ path('actor_index') }}" role="button">{{ "Revenir Ã  la liste"|trans }}</a>
{% endblock %}
