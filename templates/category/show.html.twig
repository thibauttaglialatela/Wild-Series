{% extends "base.html.twig" %}
{% block body %}
    {% for program in programs %}
        {% if program.title == "" %}
        <p class="text-light">Il n'y a aucun programme dans cette categorie</p>
            {% else %}
            <ul class="list-group">
                <li class="text-light">{{ program.id }}</li>
                <li class="list-group-bg list-group-color"><a href="/program/show/{{ program.id }}" class="list-group-item list-group-item-action">{{ program.title }}</a></li>
                <li class="text-light">{{ program.summary }}</li>
            </ul>
        {% endif %}
    {% endfor %}
{% endblock  %}