{% extends 'base.html.twig' %}

{% block title %}{{ 'Saison'|trans }}{% endblock %}

{% block body %}
    {{ '<h1>Saison</h1>'|trans|raw }}

    <table class="table">
        <tbody>
            <tr>
                {{ '<th>Numéro</th>'|trans|raw }}
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                {{ '<th>Année</th>'|trans|raw }}
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                {{ '<th>Description</th>'|trans|raw }}
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('season_index') }}">{{ 'Revenir à la liste des saisons'|trans }}</a>

    <a href="{{ path('season_edit', {'id': season.id}) }}">{{ 'Editer'|trans }}</a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
