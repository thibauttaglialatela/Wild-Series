{% extends 'base.html.twig' %}

{% block title %}{{ "formulaire de connection"|trans }}{% endblock %}

{% block body %}
    {% if error %}
        <div class="text-light">{{ error.messageKey| trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <label for="username" class="text-light">Email :</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password" class="text-light">{{ "Mot de passe :"|trans }}</label>
        <input type="password" id="password" name="_password"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <input type="hidden" name="_target_path" value="/">
        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
            <button type="submit" class="btn-info">{{ "Se connecter"|trans }}</button>
            <a href="{{ path("app_forgot_password_request") }}"
               class="btn btn-warning">{{ "Mot de passe oubli√©"|trans }}</a>
        </div>
    </form>

{% endblock %}
